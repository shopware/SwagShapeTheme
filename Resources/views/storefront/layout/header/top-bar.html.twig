{% sw_extends '@Storefront/storefront/layout/header/top-bar.html.twig' %}

{% block layout_header_top_bar %}
    <div class="top-bar">
        <nav class="top-bar-nav row">
            <div class="col-12 offset-lg-2 col-lg-8">
                {% block layout_header_top_message %}
                    <p class="text-center top-bar-message mb-0">{{ "header.topBarMessage"|trans|striptags }}</p>
                {% endblock %}
            </div>
            <div class="col-2 d-none d-lg-block">
                {% block layout_header_top_bar_currency %}
                    {{ parent() }}
                {% endblock %}

                {% block layout_header_top_bar_language %}
                    {{ parent() }}
                {% endblock %}
            </div>
        </nav>
    </div>
{% endblock %}
